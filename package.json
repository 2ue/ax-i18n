{
  "name": "ai-i18n",
  "version": "1.0.0",
  "description": "AI-powered internationalization tool for extracting and translating text in code files",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist"
  },
  "bin": {
    "ai-i18n": "dist/cli.js"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "ai",
    "llm",
    "translation",
    "extraction"
  ],
  "author": "AI-i18n Team",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.0", 
    "@langchain/openai": "^0.3.0",
    "@langchain/anthropic": "^0.3.25",
    "@langchain/community": "^0.3.0",
    "@babel/parser": "^7.25.0",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "pinyin-pro": "^3.18.4",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "inquirer": "^9.3.0",
    "cosmiconfig": "^9.0.0",
    "joi": "^17.11.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  }
}